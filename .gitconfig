[user]
    name = "Adam Walter"
    email = example@example.com

[alias]
    # Lazy
    c = commit -am
    s = status -sb
    co = checkout
    df = diff --color --color-words --abbrev
    dt = difftool

    # Fancy log
    lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative

    # Discard local changes and reset to latest state of origin
    forcepull = "!sh -c \"git fetch --all;git reset --hard origin/master;\" -"

    # Reset repo to state before the last commit (If you haven't pushed to remote yet)
    uncommit = reset --soft HEAD^

    # Undo last commit amend
    unamend = reset --soft HEAD@{1}

    # Reset to last commit, discarding all changes
    discard = reset --hard

    # Remove from tracking
    untrack = rm --cached
    untrackdir = rm -r --cached

    # Search commit messages
    search = "!sh -c \"git lg | grep --color $1\" -"

[color]
    ui = always

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    editor = nano
    excludesfile = ~/.gitignore_global
    filemode = false
    ignorecase = true

[diff]
	tool = bc3

[merge]
	tool = bc3

[mergetool]
	bc3 = trustExitCode
	keepBackup = true

[push]
    default = simple
