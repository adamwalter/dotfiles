[user]
    name = Adam Walter
    email = adam@adamwalter.com
[core]
    excludesfile = ~/.gitignore
    ignorecase = true
    pager = less -R
[alias]
    who = shortlog -s -n --no-merges
    standup = shortlog --since=yesterday
    today = shortlog --since=midnight
    uncommit = reset --soft HEAD^
    unamend = reset --soft HEAD@{1}
    pullsubs = submodule foreach git pull origin master
[push]
    default = simple
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    cmd = vim -d "$LOCAL" "$MERGED" "$REMOTE"
    trustExitCode = true